{
    "custom/tailscale": {
        "format": "{icon}",
        "format-icons": ["ïˆ³"],
        "tooltip-format": "Connetti ad Host:\n<small>{}</small>",
        "escape": false,
        "return-type":"json",
        "exec":"~/.config/waybar/scripts/tailscaleinfo.sh",
        "interval": 60,
        "on-click": "kitty --title 'Connetti a '$(cat ~/.config/.secrets/hostname.txt)'' sh -c ~/.config/waybar/scripts/connectssh.sh",
        "on-click-right": "kitty --title 'Aggiungi host' sh -c ~/.config/waybar/scripts/addhost.sh",
        "on-scroll-up": "~/.config/waybar/scripts/cyclehost.sh +1",
        "on-scroll-down": "~/.config/waybar/scripts/cyclehost.sh -1",
        "tooltip": true
    }
}