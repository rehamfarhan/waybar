{
    "hyprland/window": {
        "format": "{title}",
        "max-length": 25,
        "rewrite": {
            "": "Omarchy",
            "(.*) — Mozilla Firefox": " $1",
            "(.*) - Visual Studio Code": "󰨞 $1",
            "(.*) - Thunar": " $1",
            "(.*) - Discord": " $1",
            "(.*) - Spotify": " $1",
            "(.*) - Kitty": " $1",
            "(.*) - Ghostty": " $1"
        },
        "icon": false,
        "separate-output": true
    },

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate",
        "format": "{name}",
        "format-icons": {
            "active": " ",
            "default": " ",
            "empty": ""
        },
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "window-rewrite": {
            "title<.*youtube.*>": " ", 
            "(.*) - Chromium": " ",
            "(.*) - Firefox": " ",
            "(.*) - Brave": " ",
            "(.*) - Google": " ",
            "(.*)VSCodium": "󰨞 ",
            "class<Codium>": "󰨞 ",
            "(.*) - Thunar": " ",
            "class<discord>": " ",
            "class<WhatsApp>": " ",
            "class<org.telegram.desktop>": " ",
            "class<slack>": " ",
            "class<zoom>": "󰘔 ",
            "class<signal>": "󰈎 ",
            "class<obsidian>": "󱓧 ",
            "WhatsApp": " ",
            "Ghostty": " ",
            "class<com.mitchellh.ghostty>": " ",
            "class<spotify>": " ",
            "class<notion>": " ",
            "title<.*Gemini.*>": "󰭹 ",
            "title<.*Grok.*>": "󱚣 ",
            "title<.*ChatGPT.*>": "󰭹 ",
            "title<.*Claude.*>": "󰭹 "
	},
        "persistent-workspaces": {
            // Keep empty to only show active/occupied workspaces
        }
    },

    "cpu": {
        "interval": 2,
        "format": " {usage}%",
        "on-click": "ghostty -e btop",
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-"
    },

    "memory": {
        "interval": 2,
        "format": " {percentage}%",
        "format-alt": " {used:0.1f}G",
        "tooltip-format": "RAM: {used:0.1f}G / {total:0.1f}G\nSwap: {swapUsed:0.1f}G / {swapTotal:0.1f}G",
        "on-click": "ghostty -e btop",
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-"
    },


    "clock": {
        "interval": 1,
        "format": "󰥔 {:%I:%M %p}", // Includes seconds and a clock icon
        "format-alt": "󰃭 {:%A, %B %d, %Y (%R)}", // Detailed date view
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
           "mode": "month",
           "mode-mon-col": 3,
           "weeks-pos": "right",
           "on-scroll": 1,
             "format": {
             "months":   "<span color='#ffead3'><b>{}</b></span>",
             "days":     "<span color='#ecc6d9'><b>{}</b></span>",
             "weeks":    "<span color='#99ffdd'><b>W{}</b></span>",
             "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
             "today":    "<span color='#ff6699'><b><u>{}</u></b></span>"
        }
    },

    "actions": {
        "on-click-right": "mode",
        "on-scroll-up": "shift_up",
        "on-scroll-down": "shift_down"
    }
},

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": true,
        "format-muted": "",
        "on-click": "pamixer -t",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": " {volume}%",
        "format-source-muted": " ",
        "on-click": "pamixer --default-source -t",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },

    "network": {
        "format-wifi": "{essid}  ",
        "format-ethernet": "󰈀",
        "tooltip-format": "IP: {ipaddr}/{cidr}\nGateway: {gwaddr}\nDown:  {bandwidthDownBytes}\nUp:  {bandwidthUpBytes}",
        "format-disconnected": "󰌙",
        "on-click-right": "ghostty -e nmtui",
        "interval": 1
    },

    "tray": {
        "icon-size": 18,
        "spacing": 10
    },

    "custom/exams": {
        "exec": "python3 ~/.config/waybar/scripts/exams.py",
        "return-type": "json",
        "interval": 3600,
        "tooltip": true
    },

    "custom/ramadan": {
        "exec": "python3 ~/.config/waybar/scripts/ramadan.py",
        "return-type": "json",
        "interval": 60,
        "tooltip": true,
        "format": "{}", 
        "on-click": "notify-send 'Ramadan Schedule' '$(python3 ~/.config/waybar/scripts/ramadan.py | jq -r .tooltip)'"
    },

    "custom/sleep": {
        "exec": "python3 ~/.config/waybar/scripts/sleep_warning.py",
        "return-type": "json",
        "interval": 60,
        "tooltip": true
    },

    "custom/gamemode": {
        "format": "󰓓 ",
        "on-click": "sh ~/.config/waybar/scripts/gamemode.sh",
        "tooltip": true,
        "tooltip-format": "Toggle Gamemode (Performance)"
    },

    "custom/user": {
        "exec": "sh ~/.config/waybar/scripts/user.sh",
        "return-type": "json",
        "interval": 1800,
        "tooltip": true
    },

    "custom/media": {
        "format": "{}",
        "return-type": "json",
        "max-length": 60,
        "exec": "python3 ~/.config/waybar/scripts/mediaplayer.py",
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl stop",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous",
        "tooltip": true
    }
}
