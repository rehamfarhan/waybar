{
    "hyprland/window": {
        "format": "{}",
        "rewrite": {
            "(.*) — Mozilla Firefox": " $1",
            "(.*) - Google Chrome": " $1",
            "(.*) - Brave": " $1",
            "(.*) - Chromium": " $1",
            "(.*) - VSCodium": "󰨞 $1",
            "(.*) - Thunar": " $1",
            "(.*) - Discord": " $1",
            "Steam": " Steam",
            "WhatsDesk": " WhatsDesk",
            "(.*)WhatsApp(.*)": " WhatsApp",
            "(.*)Gemini(.*)": "󰭹 Gemini",
            "(.*)Grok(.*)": "󱚣 Grok",
            "(.*)ChatGPT(.*)": "󰭹 ChatGPT",
            "(.*)Claude(.*)": "󰭹 Claude",
            "(.*)YouTube(.*)": " YouTube",
            "(.*)Google(.*)": " Google",
            "Ghostty": " $1",
            "class<com.mitchellh.ghostty>": " $1",
            "class<org.gnome.Terminal>": " $1",
            "class<org.telegram.desktop>": " $1",
            "class<spotify>": " Spotify"
        },
        "icon": false,
        "separate-output": true
    },

    "hyprland/workspaces": {
        "disable-scroll": true,
        "active-only": false,
        "all-outputs": true,
        "on-click": "activate",
        "format": "{name}{icon}{windows}",
        "format-icons": {
            "urgent": "  ",
            "default": " ",
            "empty": ""
        },
        "window-rewrite": {
            "title<.*youtube.*>": " ", 
            "(.*) - Chromium": " ",
            "(.*) - Firefox": " ",
            "(.*) - Brave": " ",
            "(.*) - Google": " ",
            "(.*)VSCodium": "󰨞 ",
            "class<Codium>": "󰨞 ",
            "(.*) - Thunar": " ",
            "class<discord>": " ",
            "class<WhatsApp>": " ",
            "Steam": " ",
            "class<org.telegram.desktop>": " ",
            "WhatsDesk": " ",
            "Ghostty": " ",
            "class<com.mitchellh.ghostty>": " ",
            "class<spotify>": " ",
            "class<notion>": " ",
            "title<.*Gemini.*>": "󰭹 ",
            "title<.*Grok.*>": "󱚣 ",
            "title<.*ChatGPT.*>": "󰭹 ",
            "title<.*Claude.*>": "󰭹 "
	},
        "persistent-workspaces": {
            "*": 10
        }
    },

    "cpu": {
        "interval": 1,
        "format": " {usage}%",
        "on-click": "ghostty -e btop",
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-"
    },

    "memory": {
        "interval": 1,
        "format": " {percentage}%",
        "format-alt": " {used:0.1f}G",
        "tooltip-format": "RAM: {used:0.1f}G / {total:0.1f}G\nSwap: {swapUsed:0.1f}G / {swapTotal:0.1f}G",
        "on-click": "ghostty -e btop",
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-"
    },

    "clock": {
        "interval": 1,
        "format": "{:%H:%M:%S}",
        "locale": "it_IT.UTF-8",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "format-alt": "{:L%a %d/%m/%y (%H:%M:%S)}",
        "calendar": {
                    "mode"          : "month",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "format": {
                              "months":     "<span color='#ffead3'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                              "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                              }
                    }
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": true,
        "format-muted": "",
        "on-click": "pamixer -t",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": " {volume}%",
        "format-source-muted": " ",
        "on-click": "pamixer --default-source -t",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },

    "network": {
        "format-wifi": "{essid}  ",
        "format-ethernet": "󰈀",
        "tooltip-format": "IP: {ipaddr}/{cidr}\nGateway: {gwaddr}\nDown:  {bandwidthDownBytes}\nUp:  {bandwidthUpBytes}",
        "format-disconnected": "󰌙",
        "on-click-right": "ghostty -e nmtui",
        "interval": 1
    },

    "tray": {
        "icon-size": 18,
        "spacing": 10
    },

    "custom/exams": {
        "exec": "python3 ~/.config/waybar/scripts/exams.py",
        "return-type": "json",
        "interval": 3600,
        "tooltip": true
    },

    "custom/ramadan": {
        "exec": "python3 ~/.config/waybar/scripts/ramadan.py",
        "return-type": "json",
        "interval": 60,
        "tooltip": true
    },

    "custom/sleep": {
        "exec": "python3 ~/.config/waybar/scripts/sleep_warning.py",
        "return-type": "json",
        "interval": 60,
        "tooltip": true
    },

    "custom/gamemode": {
        "format": "󰓓 ",
        "on-click": "sh ~/.config/waybar/scripts/gamemode.sh",
        "tooltip": true,
        "tooltip-format": "Toggle Gamemode (Performance)"
    },

    "custom/user": {
        "exec": "whoami",
        "format": " {}",
        "tooltip-format": "Kernel: $(uname -r)\nUptime: $(uptime -p)",
        "interval": 3600
    }
}
